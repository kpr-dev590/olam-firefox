{
  "manifest_version": 2,
  "name": "Olam English Malayalam Dictionary",
  "version": "1.1",
  "permissions": [
    "alarms",
    "contextMenus",
    "https://olam.in/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "malayalam-dictionary-project@official",
      "strict_min_version": "102.0",
      "data_collection_permissions": { "required": ["none"] }
    }
  },
  "browser_action": {
    "default_icon": "16.png",
    "default_popup": "index.html"
  }
}